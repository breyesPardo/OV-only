    },
    logs: {
      nombre: "LogsLiberaciones",
      headers: ["OrderNum", "Zona", "Cliente", "Fecha LiberaciÃ³n", "Hora LiberaciÃ³n", 
                "UsuarioID", "Nombre Usuario", "Observaciones", "Estado"]
    },
    control: {
      nombre: "ControlEnvios",
      headers: ["NÃºmero de Orden", "Estado Actual", "Fecha Ãšltimo EnvÃ­o", "Hora Ãšltimo EnvÃ­o", 
